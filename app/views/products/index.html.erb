<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10">
    <h3>Products</h3>
  </div>

  <div class="col-md-2">
    <%= link_to 'New Product', new_product_path, class: "float-right" %>
  </div>
</div>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>ASIN</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Comp Price</th>
      <th>Comp Sales</th>
      <th>HSN</th>
      <th>Comp FBA Fees</th>
      <th>Rank Units</th>
      <th>ROI</th>
      <th>Profit Margin</th>
      <th>Target Daily Sales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.asin, "https://amazon.in/dp/#{product.asin}", target: :blank %></td>
        <td><%= image_tag(product.photo_url, width: '120', alt: "Edit Entry") %></td>
        <td><%= link_to product.description, product_path(product) %></td>
        <td><%= product.comp_price %></td>
        <td><%= product.comp_sales %></td>
        <td><%= product.hsn %></td>
        <td><%= product.comp_fba_fees %></td>
        <td><%= product.units_needed_to_rank %></td>
        <td></td>
        <td></td>
        <td><%= product.target_sales_per_day %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
