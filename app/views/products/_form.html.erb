    <%= form.label :inventory_roll_per_year %>
    <%= form.text_field :inventory_roll_per_year, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Add Product", class: 'btn btn-success' %>
  </div>
<% end %>
